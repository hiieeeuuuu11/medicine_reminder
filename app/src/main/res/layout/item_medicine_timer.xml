<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:background="@color/blue_1"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_customtimxah"
            android:orientation="horizontal"
            android:padding="10dp">


            <androidx.cardview.widget.CardView
                android:layout_width="82dp"
                android:layout_height="104dp"
                android:layout_margin="3dp"
                app:cardBackgroundColor="#0D03E3FF"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="67dp"
                    android:layout_height="79dp"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_medicine"
                    app:riv_oval="true" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="268dp"
                android:layout_height="129dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="5sp">

                <com.dab.medireminder.customview.UITextViewCustom
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Panadol"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:setStyleTextView="@string/open_sans_bold" />

                <com.dab.medireminder.customview.UITextViewCustom
                    android:id="@+id/tv_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="1 pill"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:setStyleTextView="@string/open_sans_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_dose"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <com.dab.medireminder.customview.UITextViewCustom
                            android:id="@+id/tv_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Hàng ngày"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:setStyleTextView="@string/open_sans_bold" />

                        <com.dab.medireminder.customview.UITextViewCustom
                            android:id="@+id/tv_time_hour"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="9:00"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:setStyleTextView="@string/open_sans_regular" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_delete"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/thungrac" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_edit"
                android:layout_width="79dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="0dp"
                android:src="@drawable/sua" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>